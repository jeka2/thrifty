<%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :price %>
    <%= f.number_field :price, step: :any %>
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit 'Create Item' %>
<% end %>