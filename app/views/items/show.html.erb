<%= @item.name %> - <%= @item.price %><br>
<%= @item.description %>
<% @item.images.each do |image| %>
    <%= image_tag '/public' + image.url %>
<% end %>

<div id="slideshow-container" class="slideshow-containter">
    <div class="mySlides slide-fade">
        <div class="numbertext">1 / 3</div>
        <img class="item-image" src="/images/4urbof.jpg">
    </div>
    <div class="mySlides slide-fade">
        <div class="numbertext">2 / 3</div>
        <img class="item-image" src="/images/c.PNG">
    </div>
    <div class="mySlides slide-fade">
        <div class="numbertext">3 / 3</div>
        <img class="item-image" src="/images/Cadspture.PNG">
    </div>
    <div style="width: 100%;">
        <a id="prev" class="prev">&#10094;</a>
        <a id="next" class="next">&#10095;</a>
    </div>
    <div id="dots-container" style="text-align:center">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</div>

<%= javascript_pack_tag 'itemSlideshow' %>