<%= form_for @department || Department.new do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    
    <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <%= f.submit @department ? "Update Department" : "Create Department", id: 'submit-button' %>
<% end %>